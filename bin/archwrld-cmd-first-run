#!/bin/bash

set -e

FIRST_RUN_MODE=~/.local/state/archwrld/first-run.mode

if [[ -f "$FIRST_RUN_MODE" ]]; then
  rm -f "$FIRST_RUN_MODE"

  bash "$ARCHWRLD_PATH/install/first-run/battery-monitor.sh"
  bash "$ARCHWRLD_PATH/install/first-run/firewall.sh"
  bash "$ARCHWRLD_PATH/install/first-run/gnome-theme.sh"
  sudo rm -f /etc/sudoers.d/first-run

  bash "$ARCHWRLD_PATH/install/first-run/wifi.sh"
  bash "$ARCHWRLD_PATH/install/first-run/welcome.sh"
fi
