# Changes require a relaunch of Hyprland to take effect.

# Ensure ArchWRLD bins are in the path
export ARCHWRLD_PATH=$HOME/.local/share/archwrld
export PATH=$ARCHWRLD_PATH/bin/:$PATH

# Set default terminal and editor
source ~/.config/uwsm/default

# Activate mise if present on the system
archwrld-cmd-present mise && eval "$(mise activate bash)"
